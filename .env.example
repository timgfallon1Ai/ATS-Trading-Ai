# Example environment variables for docker-compose and services
# Copy this file to `.env` and fill in real credentials for local development.

# General runtime
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO
ENVIRONMENT=dev

# Brokerage / Execution (Interactive Brokers)
IBKR_HOST=localhost
IBKR_PORT=7497
IBKR_CLIENT_ID=0

# Market data / news / social
POLYGON_API_KEY=
BENZINGA_API_KEY=
TWITTER_BEARER_TOKEN=

# Infrastructure
REDIS_HOST=localhost
KAFKA_BROKER=localhost:9092
DATABASE_URL=sqlite:///./data/db.sqlite3

# Service-specific
TRADER_API_KEY=
DATA_DIR=./data
